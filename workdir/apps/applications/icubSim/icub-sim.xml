<application>
<name>iCub Simulation</name>

        <module>
                <name>yarplogger</name>
                <parameters>--start --no_stop</parameters>
                <node>$ENV{ICUBSRV_HOST}</node>
        </module>

        <module>
                <name>iCub_SIM</name>
                <node>$ENV{ICUBSRV_HOST}</node>
                <environment>YARP_FORWARD_LOG_ENABLE=1</environment>
        </module>

        <module>
                <name>iKinGazeCtrl</name>
                <node>$ENV{ICUBSRV_HOST}</node>
                <parameters>--from configSim.ini</parameters>
                <environment>YARP_FORWARD_LOG_ENABLE=1</environment>
        </module>

        <module>
            <name>simFaceExpressions</name>
            <node>$ENV{ICUBSRV_HOST}</node>
            <environment>YARP_FORWARD_LOG_ENABLE=1</environment>
        </module>

        <module>
            <name>emotionInterface</name>
            <parameters>--name /icubSim/face/emotions</parameters>
            <node>$ENV{ICUBSRV_HOST}</node>
            <environment>YARP_FORWARD_LOG_ENABLE=1</environment>
        </module>

        <module>
            <name>iSpeak</name>
            <parameters></parameters>
            <environment>YARP_FORWARD_LOG_ENABLE=1</environment>
            <node>$ENV{ICUBSRV_HOST}</node>
        </module>

        <module>
            <name>yarpdev</name>
            <parameters>--device speech --lingware-context speech --default-language en-US --pitch 120 --speed 100 --robot icubSim </parameters>
            <environment>YARP_FORWARD_LOG_ENABLE=1</environment>
            <node>$ENV{ICUBSRV_HOST}</node>
        </module>

        <module>
                  <name>yarpdev</name>
                  <environment>YARP_FORWARD_LOG_ENABLE=1</environment>
                  <parameters>--device opencv_grabber</parameters>
                  <node>$ENV{ICUBSRV_HOST}</node>
        </module>

        <module>
          <name>yarpview</name>
          <parameters>--name /face --x 0 --y 0 --p 50 --w 320 --h 240</parameters>
          <node>$ENV{ICUBSRV_HOST}</node>
        </module>

        <module>
           <name>faceLandmarks</name>
           <node>$ENV{ICUBSRV_HOST}</node>
         </module>

        <connection>
            <from>/face/eyelids</from>
            <to>/icubSim/face/eyelids</to>
            <protocol>tcp</protocol>
        </connection>

        <connection>
            <from>/face/image/out</from>
            <to>/icubSim/texture/face</to>
            <protocol>tcp</protocol>
        </connection>

    	 <connection>
            <from>/icubSim/face/emotions/out</from>
            <to>/icubSim/face/raw/in</to>
            <protocol>tcp</protocol>
        </connection>

        <connection>
            <from>/iSpeak/speech-dev/rpc</from>
            <to>/icubSim/speech:rpc</to>
            <protocol>tcp</protocol>
        </connection>

        <connection>
            <from>/iSpeak/emotions:o</from>
            <to>/icubSim/face/emotions/in</to>
            <protocol>tcp</protocol>
        </connection>

        <connection>
            <from>/faceLandmarks/image:o</from>
            <to>/face</to>
            <protocol>udp</protocol>
        </connection>

        <connection>
            <output>/grabber</output>
            <input>/faceLandmarks/image:i</input>
            <protocol>udp</protocol>
        </connection>

</application>
